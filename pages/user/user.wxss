/**
重置container默认样式(app.wxss)
*/
.user-container {
    display:flex;
    width:98%;
    margin:40rpx auto;
}
.userinfo {
    display:flex;
    flex-direction:row;
    align-items:center;
    color:#aaa;
    margin-left:38rpx;
}
.userinfo-avatar {
    overflow:hidden;
    width:128rpx;
    height:128rpx;
    margin:20rpx;
    border-radius:50%;
}
.usermotto {
    margin-top:20rpx;
}
.van-grid-item-font {
    font-size:var(--grid-item-text-font-size,12px);
    color: var(--grid-item-text-color,#646566);
}
.swiper-container {
    height:200rpx;
    width:98%;
    margin:0 auto;
    border-radius:30rpx;
}
swiper {
    height:200rpx;
}
swiper-item {
    border-radius:10rpx;
}
swiper-item image {
    height:100%;
}
/**
底部index-bar索引
*/
.index-bar {
    width:98%;
    margin:20rpx auto;
}
.index-bar view{
    height:80rpx;
    width:100%;
    display:flex;
    align-items:center;
    font-size:26rpx;
    border-bottom:1rpx solid#ebedf0;
}
.icon-right {
    display:flex;
    justify-content:flex-end;
}